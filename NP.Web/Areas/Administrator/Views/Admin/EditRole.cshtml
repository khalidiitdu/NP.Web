
@{
    ViewBag.Title = "EditRole";
    Layout = null;
}

<h2>Edit Role</h2>

<div class="col-lg-6">
    <form name="roleForm" class="container">
        <div class="form-group">
            <label>Role Name</label>
            <input type="text" name="RoleName" class="form-control" ng-model="roleVM.RoleName" />
        </div>
        <div class="form-group">
            <label>Role Responsibility</label>
            <input type="text" name="RoleResponsibility" class="form-control" ng-model="roleVM.RoleResponsibility" />
        </div>
        <div class="form-group">
            <input type="button" class="btn btn-default" value="Submit" ng-click="submit()" />
        </div>
    </form>
</div>